{
	"name": "aidl-vscode-extension",
	"displayName": "AIDL for VSCode",
	"description": "AIDL language extension for vscode",
	"author": "Benoit Walter",
  "license": "MIT and Apache-2.0",
	"version": "0.1.12",
	"repository": {
		"type": "git",
		"url": "https://github.com/bwalter/aidl-lsp"
	},
	"publisher": "bwalter",
	"categories": ["Programming Languages"],
	"keywords": ["aidl", "android"],
	"preview": true,
  "icon": "icon.png",
	"engines": {
		"vscode": "^1.62.0"
	},
	"activationEvents": [
		"onLanguage:aidl"
	],
	"main": "./out/main.js",
	"contributes": {
		"configuration": {},
		"languages": [ {
				"id": "aidl",
				"aliases": [
					"AIDL",
          "aidl"
				],
				"extensions": [
					".aidl"
				],
        "configuration": "./language-configuration.json"
			}
		],
    "grammars": [{
      "language": "aidl",
      "scopeName": "source.aidl",
      "path": "./syntaxes/aidl.tmLanguage.json"
    }]
	},
	"scripts": {
		"vscode:prepublish": "npm run build-base -- --minify",
    "build-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node --target=node14",
    "build": "npm run build-base -- --sourcemap",
    "build-watch": "npm run build-base -- --sourcemap --watch",
		"compile": "tsc -b ./",
		"lint": "eslint ./src --ext .ts"
	},
	"files": [
		"bin/aidl-lsp-*"
	],
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	},
	"devDependencies": {
		"@types/mocha": "^8.2.2",
    "@types/node": "~14.17.5",
    "@types/vscode": "~1.62.0",
		"@typescript-eslint/eslint-plugin": "^4.23.0",
		"@typescript-eslint/parser": "^4.23.0",
    "esbuild": "^0.14.1",
		"eslint": "^7.26.0",
		"mocha": "^8.3.2",
		"typescript": "^4.4.3"
	}
}
