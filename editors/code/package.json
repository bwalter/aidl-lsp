{
	"name": "aidl-vscode-extension",
	"displayName": "AIDL for VSCode",
	"description": "AIDL language extension for vscode",
	"author": "Benoit Walter",
  "license": "MIT and Apache-2.0",
	"version": "0.1.9",
	"repository": {
		"type": "git",
		"url": "https://github.com/bwalter/aidl-lsp"
	},
	"publisher": "bwalter",
	"categories": ["Programming Languages"],
	"keywords": ["aidl", "android"],
	"preview": true,
  "icon": "icon.png",
	"engines": {
		"vscode": "^1.52.0"
	},
	"activationEvents": [
		"onLanguage:aidl"
	],
	"main": "./out/extension",
	"contributes": {
		"configuration": {},
		"languages": [
			{
				"id": "aidl",
				"aliases": [
					"AIDL",
          "aidl"
				],
				"extensions": [
					".aidl"
				],
        "configuration": "./language-configuration.json"
			}
		],
    "grammars": [{
      "language": "aidl",
      "scopeName": "source.aidl",
      "path": "./syntax/aidl.tmLanguage.json"
    }]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b ./",
		"watch": "tsc -b -w",
		"lint": "eslint ./src --ext .ts"
	},
	"files": [
		"bin/aidl-lsp-*"
	],
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	},
	"devDependencies": {
		"@types/mocha": "^8.2.2",
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.23.0",
		"@typescript-eslint/parser": "^4.23.0",
		"eslint": "^7.26.0",
		"mocha": "^8.3.2",
		"typescript": "^4.4.3"
	}
}
